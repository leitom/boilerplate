{
    "name": "leitom/boilerplate",
    "description": "Codebase that contains all basic stuff when creating a new project in the laravel 4 framework",
    "authors": [
        {
            "name": "Tommy Leirvik",
            "email": "leirvik.tommy@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.3.0",
        "illuminate/support": "4.0.*"
    },
    "require-dev": {
        "way/generators": "dev-master",
        "way/laravel-test-helpers": "dev-master",
        "illuminate/foundation": "4.0.*",
        "mockery/mockery": "dev-master"
    },
    "autoload": {
        "classmap": [
    	    "src/controllers",
    	    "src/migrations",
            "tests"
        ],
        "psr-0": {
            "Leitom\\Boilerplate\\": "src/"
        }
    },
    "minimum-stability": "dev"
}
